{
    "version": "0.1.0",
    "command": "node",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "start ui",
            "args": ["./carbon-ui/scripts/watch.js"],
            "isBackground": true,
            "isBuildCommand": true
        },
        {
            "taskName": "start ui (overwrite vendors)",
            "args": ["./carbon-ui/scripts/watch.js", "--vendors"],
            "isBackground": true,
            "isBuildCommand": true
        },
        {
            "taskName": "core examples",
            "args": ["./carbon-core/scripts/watchCore.js", "--example"],
            "isBackground": true
        },
        {
            "taskName": "test",
            "args": ["./carbon-core/scripts/test.js", "--watch"],
            "isBackground": true,
            "isTestCommand": true
        }
    ]
}