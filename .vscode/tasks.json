{
    "version": "0.1.0",
    "command": "node",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "start core and ui",
            "args": [
                "./scripts/watchAll.js"
            ],
            "isBackground": true,
            "isBuildCommand": true,
            "problemMatcher": [
                {
                    "owner": "webpack-ui",
                    "watching": {
                        "activeOnStart": true,
                        "beginsPattern": "\\[ui\\] Checking started in a separate process",
                        "endsPattern": "ui: webpack: Failed to compile\\.|ui: webpack: bundle is|ui: webpack: Compiled"
                    },
                    "severity": "error",
                    "fileLocation": [
                        "relative",
                        "${workspaceRoot}/carbon-ui"
                    ],
                    "pattern": [
                        {
                            "regexp": "\\[ui\\]\\s(.*?):(\\d+):(\\d+)",
                            "file": 1,
                            "line": 2,
                            "column": 3
                        },
                        {
                            "regexp": "\\s+(.*)",
                            "message": 1
                        }
                    ]
                },
                {
                    "owner": "webpack-core",
                    "watching": {
                        "activeOnStart": true,
                        "beginsPattern": "\\[core\\] Checking started in a separate process",
                        "endsPattern": "core: webpack: Failed to compile\\.|core: webpack: bundle is|core: webpack: Compiled"
                    },
                    "severity": "error",
                    "fileLocation": [
                        "relative",
                        "${workspaceRoot}/carbon-core"
                    ],
                    "pattern": [
                        {
                            "regexp": "\\[core\\]\\s(.*?):(\\d+):(\\d+)",
                            "file": 1,
                            "line": 2,
                            "column": 3
                        },
                        {
                            "regexp": "\\s+(.*)",
                            "message": 1
                        }
                    ]
                }
            ]
        },
        {
            "taskName": "core examples",
            "args": [
                "./carbon-core/scripts/watchCore.js",
                "--example",
                "--port",
                "8081"
            ],
            "isBackground": true
        },
        {
            "taskName": "pack debug core",
            "args": [
                "./carbon-core/scripts/packCore.js",
                "--sourceMaps",
                "--noUglify",
                "--copyToUi"
            ]
        },
        {
            "taskName": "start ui",
            "args": [
                "./carbon-ui/scripts/watch.js"
            ],
            "isBackground": true
        },
        {
            "taskName": "test",
            "args": [
                "./carbon-core/scripts/test.js",
                "--watch"
            ],
            "isBackground": true,
            "isTestCommand": true
        },
        {
            "taskName": "test ui",
            "args": [
                "./carbon-ui/scripts/test.js",
                "--watch"
            ],
            "isBackground": true,
            "showOutput": "always",
            "isShellCommand": true,
            "isTestCommand": true,
            "options": {
                "cwd": "${workspaceRoot}/carbon-ui"
            }
        }
    ]
}