// Place your settings in this file to overwrite default and user settings.
{
    "typescript.tsdk": "./carbon-ui/node_modules/typescript/lib",
    "typescript.validate.enable": true,

    "eslint.enable": false,
    "jshint.enable": false,

    "search.exclude": {
        "**/node_modules": true,
        "**/target/": true,
        "carbon-server/": true
    },
    "files.exclude": {
        "**/.git": true,
        "**/.idea": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "carbon-server/": true
    },

    "editor.trimAutoWhitespace": true,
    "files.trimTrailingWhitespace": true
}